datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  pictures    Picture[]
  updatedAt   DateTime  @updatedAt
}

model GpsData {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  latitude  Float?
  longitude Float?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Picture {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  timestamp  DateTime?
  updatedAt  DateTime  @updatedAt
  url        String?
}

model User {
  createdAt    DateTime  @default(now())
  email        String?   @unique
  firstName    String?
  gpsDataItems GpsData[]
  id           String    @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime  @updatedAt
  username     String    @unique
}
